<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClothingActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/electTittle"
        android:text="Electronics"
        android:textSize="36sp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/lavender"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:id="@+id/electImage"
        android:layout_below="@+id/electTittle"
        android:layout_centerHorizontal="true"
        android:src="@drawable/computer1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/electMoTa"
        android:text="Màn hình máy tính"
        android:textSize="28sp"
        android:layout_below="@+id/electImage"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/lavender"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/electGia"
        android:text="₫1.499.000đ"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/electMoTa"
        android:textSize="30sp"/>


    <Button
        android:id="@+id/btnBuy"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Mua ngay"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="#4CAF50"
        android:layout_below="@id/electGia"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>