<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/dobong_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Ảnh đại diện -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:src="@drawable/avata"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và Tên:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Tiến Đạt"
            android:textSize="22sp"
            android:textColor="#1976D2"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtBirthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29/04/2004"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:layout_marginStart="16dp" />
        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sở thích:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/txtHobbies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem phim, nghe nhạc, chụp ảnh, nấu ăn,đọc truyện"
            android:textSize="18sp"
            android:textColor="#388E3C"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Môn thể thao yêu thích nhất:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerMath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/math_operations"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call to 0346442889"
            android:backgroundTint="@color/card1"
            android:textColor="@color/font_card2"
            android:textSize="33sp"
            android:layout_marginBottom="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp">


            <ImageView
                android:id="@+id/btnEmail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_email_24"
                android:contentDescription="Email"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                />


            <ImageView
                android:id="@+id/btnSMS"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_sms_24"
                android:contentDescription="SMS"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                />


            <ImageView
                android:id="@+id/btnPhone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_phone_24"
                android:contentDescription="Phone"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
